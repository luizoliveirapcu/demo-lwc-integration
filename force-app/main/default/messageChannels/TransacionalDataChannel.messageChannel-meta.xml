<?xml version="1.0" encoding="UTF-8"?>
<LightningMessageChannel xmlns="http://soap.sforce.com/2006/04/metadata">
    <masterLabel>TransacionalDataChannel</masterLabel>
    <description>Lightning Message Channel utilizado para dados transacionais.</description>
    <isExposed>true</isExposed>
    <lightningMessageFields>
        <description>Id do registro principal que disparou a mensagem</description>
        <fieldName>recordId</fieldName>
    </lightningMessageFields>
    <lightningMessageFields>
        <description>Tag para filtrar o tipo da mensagem enviada</description>
        <fieldName>filter</fieldName>
    </lightningMessageFields>
    <lightningMessageFields>
        <description>Payload com o dado enviado</description>
        <fieldName>data</fieldName>
    </lightningMessageFields>
</LightningMessageChannel>
